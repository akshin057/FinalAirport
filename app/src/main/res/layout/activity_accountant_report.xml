<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountantReport"
    android:background="@color/accountant_report_background">

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отчет за:"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="35sp"
        android:layout_gravity="left"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/report1TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="25sp"
        android:text="Выручка от диспетчерской: "
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTV" />

    <TextView
        android:id="@+id/sum1TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Сумма в рублях"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report1TV"
        />

    <TextView
        android:id="@+id/report2TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="25sp"
        android:text="Выручка от арендаторов: "
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sum1TV" />

    <TextView
        android:id="@+id/sum2TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Сумма в рублях"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report2TV"
        />

    <TextView
        android:id="@+id/report3TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="25sp"
        android:text="Выручка от сервисов: "
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sum2TV" />

    <TextView
        android:id="@+id/sum3TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Сумма в рублях"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report3TV"
        />


    <TextView
        android:id="@+id/report4TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="25sp"
        android:text="Общая выручка за сутки: "
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sum3TV" />

    <TextView
        android:id="@+id/sum4TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Сумма в рублях"
        android:textColor="@color/accountant_report_stroke"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report4TV"
        />

    <android.widget.Button
        android:id="@+id/returnBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вернуться назад"
        android:background="@drawable/accountant_report_btn"
        android:textColor="@color/accountant_report_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sum4TV" />

</androidx.constraintlayout.widget.ConstraintLayout>