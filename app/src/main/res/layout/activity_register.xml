<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    app:cardElevation="10sp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/radioGroupTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="Выберите должность"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/postRG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <RadioButton
                android:id="@+id/directorRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Директор"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/chiefAccountantRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Главный бухгалтер"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/chiefDispatcherRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Главный диспетчер"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/chiefPassengerRegistrationRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Глава пункта приема пассажиров"
                android:textSize="20sp"
                android:checked="false"
                />


        </RadioGroup>

        <EditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:hint="Введите ваше имя"
            android:inputType="text"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#606660"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:hint="Введите пароль"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#606660"
            android:textSize="20sp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>